<header class="plant-header-v6">
  <div class="plant-header-v6-wrapper text-center">

    <p class="logo text-center">
      <a href="{{shop.url}}">
        <img src="{% if settings.headerv6_logo == blank %}{{'h2_logo1.png'|asset_url}}{% else %}{{settings.headerv6_logo|img_url:'master'}}{% endif %}" alt="" class="img-responsive logo-dsk" width="{{settings.headerv6_logo_maxwwidth}}">
        <img src="{% if settings.headerv6_logo_mobile == blank %}{{'h2_logo1.png'|asset_url}}{% else %}{{settings.headerv6_logo_mobile|img_url:'master'}}{% endif %}" alt="" class="img-responsive logo-mob" width="{{settings.headerv6_logo_maxwwidth}}">
      </a>
    </p>

    <ul class="menu">
      {% for link in linklists.main-menu.links %}
      <li class="{% if link.active %}active{% endif %}">
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
      {% endfor %}
    </ul>

    <div class="burger-menu js-burger-menu">
      <span></span>
    </div>

    
    <div class="navbar-wrapper js-navbar-wrapper">
      <form class="search" action="/search">
        <div class="input-group">
          <input type="text" class="form-control search-text" placeholder="Search" name="q" value="{{ search.terms | escape }}" />
          <span class="input-group-btn">
            <button class="search-btn" type="submit"><img src="{{'search-home4.png'|asset_url}}" alt="" class="img-responsive"></button>
          </span>
        </div>
      </form>
      
      <ul class="menu-mobile">
        {% for link in linklists.main-menu.links %}
        <li class="{% if link.active %}active{% endif %}">
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
        {% endfor %}
      </ul>
      
    </div>

    <div class="navbar-bottom">
      <p class="cart text-center"><a href="/cart"><img src="{{'addtocart_icon.png'|asset_url}}" alt="" class="img-responsive"></a></p>

      <form class="search" action="/search">
        <div class="input-group">
          <input type="text" class="form-control search-text" placeholder="Search" name="q" value="{{ search.terms | escape }}" />
          <span class="input-group-btn">
            <button class="search-btn" type="submit"><img src="{{'search-home4.png'|asset_url}}" alt="" class="img-responsive"></button>
          </span>
        </div>
      </form>
    </div>

  </div>
</header>