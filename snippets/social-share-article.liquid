<!-- /snippets/socialshare.liquid -->
{% if template contains 'article' or template contains 'blog' %}
{% capture permalinkURL %}{{ shop.url }}{{ article.url }}{% endcapture %}
{% capture shareTitle %}{{ article.title | url_param_escape }}{% endcapture %}
{% elsif template contains 'product' or template contains 'collection' %}
{% capture permalinkURL %}{{ shop.url }}{{ product.url }}{% endcapture %}
{% capture shareTitle %}{{ product.title | url_param_escape }}{% endcapture %}
{% elsif template == 'password' %}
{% capture permalinkURL %}{{ shop.url }}{% endcapture %}
{% capture shareTitle %}{% unless shop.description == blank %}{{ shop.description | url_param_escape }}{% else %}{{ shop.name | url_param_escape }}{% endunless %}{% endcapture %}
{% endif %}

{% comment %}
Share button styles are:
* is-clean
* normal
{% endcomment %}

{% assign shareButtonStyle = 'is-clean' %}

<div class="entry-share-btn">
  <span class="share-button--icon">Share <i class="fa fa-share-alt"></i></span>
  <div class="share-button--icon">
    <a href="//www.facebook.com/sharer.php?u={{ permalinkURL }}" target="_blank" class="facebook-share-color" data-toggle="tooltip" data-placement="left" data-original-title="Facebook"><i class="fa fa-facebook"></i></a>
  </div>
  <div class="share-button--icon">
    <a href="//twitter.com/share?text={{ shareTitle }}&amp;url={{ permalinkURL }}" target="_blank" class="twitter-share-color" data-toggle="tooltip" data-placement="left" data-original-title="Twitter"><i class="fa fa-twitter"></i></a>
  </div>
  <div class="share-button--icon">
    <a href="//pinterest.com/pin/create/button/?url={{ permalinkURL }}&amp;media=http:{% if template contains 'product' %}{{ product | img_url: '1024x1024' }}{% else %}{{ article | img_url: '1024x1024' }}{% endif %}&amp;description={{ shareTitle }}" target="_blank" class="pinterest-share-color" data-toggle="tooltip" data-placement="left" data-original-title="Pinterest"><i class="fa fa-pinterest"></i></a>
  </div>
  <div class="share-button--icon">
    <a href="//plus.google.com/share?url={{ permalinkURL }}" target="_blank" class="google-share-color" data-toggle="tooltip" data-placement="left" data-original-title="Google Plus"><i class="fa fa-google-plus"></i></a>
  </div>
</div>
