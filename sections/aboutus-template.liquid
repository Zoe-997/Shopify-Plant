<div class="about-us">
  <div class="container"> 
    <div class="main-img"><a href=""><img src="{% if section.settings.bg_image_breadcrumb == blank %}https://placehold.it/2048x1152{% else %}{{section.settings.bg_image_breadcrumb|img_url:'master'}}{% endif %}" alt=""></a></div>
  </div>
  
  {% if section.settings.enable_block %}
  <div class="container container-ver2">
    <div class="row">
      <div class="about-top">
        <div class="col-md-6 item-typo">
          <div class="typo clearfix">
            <p>{{section.settings.bh_content}}</p>
            <span><em>{{section.settings.bh_des}}</em></span>
          </div>
        </div>
        <div class="col-md-7 text-ab-top">
          <div class="text-about">
            <h3>{{section.settings.b1_title}}</h3>
            <p>{{section.settings.b1_content1}}</p>
            <p>{{section.settings.b1_content2}}</p>
          </div>
        </div>
      </div>
    </div>
    <div class="about-bt">
      <div class="row">
        <div class="col-md-5">
          <div class="text-about">
            <h3>{{section.settings.b2_title}}</h3>
            <p>{{section.settings.b2_content1}}</p>
            <p>{{section.settings.b2_content2}}</p>
          </div>
        </div>
        <div class="col-md-5 col-md-offset-1">
          <div class="text-about">
            <h3>{{section.settings.b3_title}}</h3>
            <p>{{section.settings.b3_content1}}</p>
            <p>{{section.settings.b3_content2}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
</div>

{% if section.settings.enable_testimonial %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="testimonial-wrapper js-aboutus-testimonial" style="background: url({% if section.settings.testimonial_bg == blank %}https://placehold.it/1860x535{% else %}{{section.settings.testimonial_bg|img_url:'master'}}{% endif %}) no-repeat center; background-size: cover;">
        {% for block in section.blocks %}
        {% if block.type == "testimonial" %}
        <div class="testimonial-item-wrapper">
          <div class="testimonial-item">
            <p class="testimonial-content">{{block.settings.t_content}}</p>
            <h3 class="testimonial-name">{{block.settings.t_customer_name}}</h3>
            <p class="testimonial-des">{{block.settings.t_customer_info}}</p>
          </div>
        </div>
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endif %}

{% if section.settings.enable_brand %}
<div class="container container-ver2">
  <div class="row">
    <div class="col-md-12">
      <div class="brand-wrapper">
        <div class="js-aboutus-brand">
          {% for block in section.blocks %}
          {% if block.type == "brand" %}
          <div class="brand-item-wrapper">
            <a href="{{block.settings.brand_url}}"><img src="{% if block.settings.brand_image == blank %}https://placehold.it/120x80{% else %}{{block.settings.brand_image|img_url:'master'}}{% endif %}" style="width: auto;"></a>
          </div>
          {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}

{% if section.settings.enable_newsletter %}
<div class="section-newsletter about-section-newsletter">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="newsletter-wrapper newsletter-v2" style="background-color: {{section.settings.newsletter_bg_color}};">
          <div class="container container-ver2">
            <div class="row">
              <div class="col-md-12">
                {% if settings.newsletter_form_action != blank %}
                {% assign form_action = settings.newsletter_form_action %}
                {% else %}
                {% assign form_action = '#' %}
                {% endif %}

                <form action="{{form_action}}" class="text-center" method="post">
                  <label>
                    <h3>{{section.settings.newletter_title}}</h3>
                    <p>{{section.settings.newletter_des}}</p>
                  </label>
                  <div class="form-group">
                    <input type="email" name="EMAIL" class="form-control" placeholder="{{section.settings.newletter_placeholder}}">
                  </div>
                  <button type="submit" class="link-v1">{{section.settings.newletter_btn_name}}</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}


