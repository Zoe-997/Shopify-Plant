<div data-section-id="{{ section.id }}" data-section-type="section-banner-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="banner-v4">
    <div class="container container-ver2 ">
      <div class="row">
        <div class="col-md-5 col-sm-6 col-xs-12 banner-left">
          <div class="row">
            {% for block in section.blocks %}
            {% if block.type == "bannerleft" %}
            <div class="col-md-12 item-banner">
              <div class="img-banner">
                <a href="{{block.settings.banner_url}}" class="hover-images">
                  <img class="img-responsive" src="{% if block.settings.banner_img == blank %}https://placehold.it/650x755{% else %}{{block.settings.banner_img|img_url:'master'}}{% endif %}" alt="">
                </a>
              </div>
              <div class="title"><a href="{{block.settings.banner_url}}"><p>{{block.settings.banner_title}}</p></a></div>
              <div class="title-left"><p class="border"></p> <p>{{block.settings.banner_label}}</p></div>
            </div>
            {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="col-md-5 col-md-offset-2 col-sm-6 col-xs-12 banner-right">
          <div class="row">
            {% for block in section.blocks %}
            {% if block.type == "bannerright" %}
            <div class="col-md-12 item-banner">
              <div class="img-banner">
                <a href="{{block.settings.banner_url}}" class="hover-images">
                  <img class="img-responsive" src="{% if block.settings.banner_img == blank %}https://placehold.it/650x755{% else %}{{block.settings.banner_img|img_url:'master'}}{% endif %}" alt="">
                </a>
              </div>
              <div class="title"><a href="{{block.settings.banner_url}}"><p>{{block.settings.banner_title}}</p></a></div>
              <div class="title-right"><p class="border"></p> <p>{{block.settings.banner_label}}</p></div>
            </div>
            {% endif %}
            {% endfor %}
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

