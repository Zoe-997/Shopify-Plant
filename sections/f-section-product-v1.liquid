<div data-section-id="{{ section.id }}" data-section-type="f-section-product-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section class="featured-products new-arrivals section-product-v1">
      <div class="text-center">
        <h3>{{section.settings.product_title}}</h3>
        <p>{{section.settings.product_des}}</p>
      </div>
      <div class="products ver2 js-product-v1">
        {% for product in collections[section.settings.product_collection].products limit:section.settings.product_limit %}
        {% include 'product-item' %}
        {% else %}
        {% include 'product-item-empty' %}
        {% endfor %}
      </div>
  </section>
</div>
{% schema %}
{
  "name": "Product v1",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "product_title",
      "label": "Title",
      "default": "The most important things are not things"
    },
    {
      "type": "text",
      "id": "product_des",
      "label": "Description",
      "default": "so weâ€™ll design experiences."
    },
    {
      "type": "collection",
      "id": "product_collection",
      "label": "Select Collection"
    },
    {
      "type": "text",
      "id": "product_limit",
      "label": "Limit number",
      "default": "5"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Product v1",
      "category": "Product"
    }
  ]
}
{% endschema %}

