<div data-section-id="{{ section.id }}" data-section-type="section-video" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="plant-video" data-init="video">
    <div class="plant-video__img">
      
      {% if section.settings.bg_image == blank %}
      {% capture _img_url %}section-video-bg-img.jpg{% endcapture %}
      <img src="{{ _img_url | asset_url}}" alt="Video background">
      {% else %}
      <img src="{{ section.settings.bg_image | img_url:'master' }}" alt="Video background">
      {% endif %}
      
      <div class="plant-video__wrapper js-video-wrapper">
        <p class="plant-video__play js-play-video" title="Play video" data-video-link="{{section.settings.video_url}}">
          <i class="fa fa-play"></i>
        </p>
        <p class="plant-video__content text-center">{{section.settings.video_content}}</p>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Video",
  "class": "index-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image",
      "info": "1920 x 670px recommended"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL",
      "info": "*only Vimeo",
      "default": "https://player.vimeo.com/video/180484998"
    },
    {
      "type": "text",
      "id": "video_content",
      "label": "Content",
      "default": "DESIGNED IN NEW YORK, MADE IN LOS ANGELES, DLIVERED TO YOUR DOOR"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Video",
      "category": "Content"

    }
  ]
}
{% endschema %}

