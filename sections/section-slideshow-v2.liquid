<div data-section-id="{{ section.id }}" data-section-type="section-slideshow-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section class="mb-30 slideshow-v2{% if section.settings.section_layout == "fullwidth" %}{% elsif section.settings.section_layout == "fluid" %} container{% else %} container container-ver2{% endif %}">
    <div class="js-slideshow-v2">
      {% for block in section.blocks %}
      <div class="hero-slide">
        <a href="{{block.settings.slideshow_url}}">
          <div class="hero-slide-wrapper">
            <div class="row no-gutters content-wrapper">

              <div class="col-sm-6 col-sm-push-6">
                <img src="{% if block.settings.slideshow_img_desktop == blank %}https://placehold.it/911x930{% else %}{{block.settings.slideshow_img_desktop|img_url:'master'}}{% endif %}" class="img-responsive" data-animation="fadeInDown" data-delay="0.3s" /> 
              </div>
              
              <div class="col-sm-6 col-sm-pull-6">
                <div class="content-wrapper-inner">
                  <p class="description" data-animation="fadeInUp" data-delay="0.3s">{{block.settings.slideshow_des}}</p>
                  <h3 class="title" data-animation="fadeInUp" data-delay="0.5s">{{block.settings.slideshow_title}}</h3>
                  <p class="content" data-animation="fadeInUp" data-delay="0.7s"><del>{{block.settings.slideshow_content1}}</del><ins>{{block.settings.slideshow_content2}}</ins></p>
                  <p class="button-name" data-animation="fadeInUp" data-delay="0.9s"><span>{{block.settings.slideshow_btn}}</span></p>
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </section>
</div>

